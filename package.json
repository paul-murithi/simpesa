{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "simpesa",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "shared/*"
  ],
  "scripts": {
    "dev:api": "tsx watch apps/api/src/server.ts",
    "build:api": "tsc -b apps/api",
    "start:api": "node dist/apps/api/index.js",
    "prisma:generate": "prisma generate --schema apps/api/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema apps/api/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema apps/api/prisma/schema.prisma",
    "dev:worker": "tsx watch apps/worker/src/index.ts",
    "build:worker": "tsc -b apps/worker",
    "start:worker": "node dist/apps/worker/index.js",
    "dev:ui": "vite --config apps/ui/vite.config.ts",
    "build:ui": "tsc -b && vite build --config apps/ui/vite.config.ts",
    "preview:ui": "vite preview --config apps/ui/vite.config.ts",
    "build": "npm run build:api && npm run build:worker && npm run build:ui",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:ui\""
  },
  "dependencies": {
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.66.5",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.17.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@tailwindcss/vite": "^4.1.18",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "concurrently": "^8.2.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prisma": "^4.16.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
